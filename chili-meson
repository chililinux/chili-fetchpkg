#!/bin/sh -ex
exec meson setup \
	--prefix=/usr \
	--libdir=/usr/lib \
	--libexecdir=/usr/lib \
	--bindir=/usr/bin \
	--sbindir=/usr/sbin \
	--includedir=/usr/include \
	--datadir=/usr/share \
	--mandir=/usr/share/man \
	--infodir=/usr/share/info \
	--localedir=/usr/share/locale \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--sharedstatedir=/var/lib \
	--buildtype=plain \
	--auto-features=auto \
	--wrap-mode=nodownload \
	-Db_lto=true \
	-Db_pie=true \
	-Db_thinlto_cache=true \
  "$@"
